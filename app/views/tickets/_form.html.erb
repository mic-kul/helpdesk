<%= form_for @ticket do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :topic %><br />
    <%= f.text_field :topic %>
  </p>
  <p>
    <%= f.label :message %><br />
    <%= f.text_area :message %>
  </p>
  <p>
    <%= select("ticket", "category_id", Category.all.collect {|c| [ c.name, c.id ] }, {:prompt =>'Select Category'}) %>
  </p>
  <p><%= f.submit %></p>
<% end %>
