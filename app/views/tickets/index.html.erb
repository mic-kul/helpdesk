<div class="page-header">
<% title "Tickets" %>
</div>



<div class="row-fluid">
					<div class="span6 m-widget">
						<div class="m-widget-header">
							<h3>Recent tickets</h3>
						</div>
						<div class="m-widget-body">
							<p><%= link_to "New Ticket", new_ticket_path %></p>
							<table class="table table-striped table-condensed">
								<thead>
									<tr>
										<th>#</th>
										<th>Title</th>
										<th>Category</th>
	
									</tr>								</tr>
								</thead>
								<tbody>
									<% for ticket in @tickets %>
									<tr>
										<td style="width: 30px;"><%= ticket.id %></td>
										<td style="width: 60%"><%= link_to h(ticket.topic), ticket %></td>
										<td><%= ticket.category.name %></td>
										<td class="tr">
											<td><%= link_to "View", ticket %>
											<a href="<%= edit_ticket_path(ticket) %>" class="btn btn-primary">Edit</a>
											<%= link_to "Destroy", ticket, :confirm => 'Are you sure?', :method => :delete %>
										</td>
									</tr>
									<% end %>
									
								</tbody>
							</table>
						</div>
					</div>
</div>
